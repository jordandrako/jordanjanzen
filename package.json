{
  "name": "jordanjanzen.com",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test --env=jsdom",
    "eject": "react-scripts eject",
    "branchcheck": "git-branch-is master",
    "predeploy":
      "yarn branchcheck && cross-env REACT_APP_DATABASE=production yarn build",
    "prestaging": "yarn build",
    "deploy":
      "aws s3 sync build/ s3://www.jordanjanzen.com --cache-control max-age=172800",
    "staging":
      "aws s3 sync build/ s3://staging.jordanjanzen.com --cache-control max-age=180",
    "postdeploy":
      "aws cloudfront create-invalidation --distribution-id E1SASUQHSLUTW3 --paths /index.html",
    "poststaging":
      "aws cloudfront create-invalidation --distribution-id E2R8NA2ILW4G96 --paths /index.html"
  },
  "dependencies": {
    "firebase": "^4.12.1",
    "moment": "^2.22.0",
    "polished": "^1.9.2",
    "prop-types": "^15.6.1",
    "re-base": "^3.2.2",
    "react": "^16.3.2",
    "react-autosize-textarea": "^3.0.2",
    "react-document-title": "^2.0.3",
    "react-dom": "^16.3.0",
    "react-dropzone": "^4.2.9",
    "react-dropzone-s3-uploader": "^1.1.0",
    "react-fontawesome": "^1.6.1",
    "react-ga": "^2.4.1",
    "react-loadable": "^5.3.1",
    "react-router-dom": "^4.2.2",
    "react-scripts": "1.1.3",
    "react-transition-group": "^2.3.0",
    "sha1": "^1.1.1",
    "styled-components": "^3.2.5",
    "styled-normalize": "^4.0.0",
    "superagent": "^3.8.2"
  },
  "devDependencies": {
    "babel-eslint": "^7.2.3",
    "cross-env": "^5.1.4",
    "eslint": "^3.19.0",
    "eslint-config-airbnb": "^15.1.0",
    "eslint-config-prettier": "^2.6.0",
    "eslint-plugin-html": "^3.2.2",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-jsx-a11y": "^5.1.1",
    "eslint-plugin-prettier": "^2.3.1",
    "eslint-plugin-react": "^7.4.0",
    "git-branch-is": "^0.1.0",
    "prettier": "^1.7.3"
  },
  "eslintConfig": {
    "extends": ["airbnb", "prettier", "prettier/react"],
    "parser": "babel-eslint",
    "parserOptions": {
      "ecmaVersion": 8,
      "ecmaFeatures": {
        "experimentalObjectRestSpread": true,
        "impliedStrict": true,
        "classes": true
      }
    },
    "env": {
      "browser": true,
      "node": true,
      "jquery": true
    },
    "rules": {
      "no-unused-vars": [
        1,
        {
          "argsIgnorePattern": "res|next|^err"
        }
      ],
      "arrow-body-style": [2, "as-needed"],
      "arrow-parens": [2, "always"],
      "no-param-reassign": [
        2,
        {
          "props": false
        }
      ],
      "no-console": 0,
      "import": 0,
      "func-names": 0,
      "space-before-function-paren": 0,
      "comma-dangle": 0,
      "max-len": 0,
      "import/extensions": 0,
      "no-underscore-dangle": 0,
      "consistent-return": 0,
      "linebreak-style": 0,
      "react/display-name": 1,
      "react/react-in-jsx-scope": 0,
      "react/forbid-prop-types": 0,
      "react/no-unescaped-entities": 0,
      "react/jsx-filename-extension": [
        1,
        {
          "extensions": [".js", ".jsx"]
        }
      ],
      "radix": 0,
      "no-shadow": [
        2,
        {
          "hoist": "all",
          "allow": ["resolve", "reject", "done", "next", "err", "error"]
        }
      ],
      "quotes": [
        2,
        "single",
        {
          "avoidEscape": true,
          "allowTemplateLiterals": true
        }
      ],
      "jsx-a11y/href-no-hash": "off",
      "jsx-a11y/anchor-is-valid": [
        "warn",
        {
          "aspects": ["invalidHref"]
        }
      ]
    },
    "plugins": ["html"]
  }
}
